{
  "name": "pdfmaid",
  "version": "1.0.0",
  "description": "PDFMaid - Your Markdown to PDF/HTML converter with beautiful Mermaid diagram rendering",
  "main": "lib/index.js",
  "bin": {
    "pdfmaid": "./bin/pdfmaid.js",
    "md-to-html": "./bin/md-to-html.js",
    "html-to-pdf": "./bin/html-to-pdf.js",
    "md-to-pdf": "./bin/md-to-pdf.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "keywords": [
    "pdfmaid",
    "markdown",
    "pdf",
    "html",
    "mermaid",
    "diagrams",
    "converter",
    "documentation",
    "flowchart",
    "sequence-diagram",
    "gantt",
    "cli",
    "markdown-to-pdf"
  ],
  "author": "Lyuboslav Petrov <petrov.lyuboslav@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nirabo/pdfmaid.git"
  },
  "bugs": {
    "url": "https://github.com/nirabo/pdfmaid/issues"
  },
  "homepage": "https://github.com/nirabo/pdfmaid#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^27.0.0",
    "prettier": "^3.7.4"
  },
  "files": [
    "lib/",
    "bin/",
    "README.md",
    "LICENSE"
  ]
}
